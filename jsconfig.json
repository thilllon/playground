    "module": "es6",
    "target": "es5",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "out",
    ".next",
    ".vscode",
    "build",
    "scripts",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
